<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8" />
    <title>Novo Empréstimo</title>
    <link rel="stylesheet" href="/css/novo.css" />
</head>

<body>
    <h1>Registrar Empréstimo</h1>

    <div class="form-container">

        <form action="/emprestimos/novo" method="POST">

            <p>
                <label>Jogo:</label><br />
                <select name="jogoId" required>
                    <% jogos.forEach(j => { %>
                        <option value="<%= j.id %>">
                            <%= j.titulo %> (<%= j.plataforma %>)
                        </option>
                    <% }) %>
                </select>
            </p>

            <p>
                <label>Amigo que pegou:</label><br />
                <select name="amigoId" required>
                    <% amigos.forEach(a => { %>
                        <option value="<%= a.id %>">
                            <%= a.nome %> (<%= a.email %>)
                        </option>
                    <% }) %>
                </select>
            </p>

            <p>
                <label>Data de início:</label><br />
                <input 
                    type="date"
                    name="dataInicio" 
                    required 
                />
            </p>

            <p>
                <label>Data de fim (opcional):</label><br />
                <input 
                    type="date"
                    name="dataFim" 
                />
            </p>

            <p style="text-align: center; margin-top: 20px;">
                <button type="submit" class="salvar">Salvar</button>
                <a href="/emprestimos" class="cancelar">Cancelar</a>
            </p>

        </form>
    </div>
</body>
</html>